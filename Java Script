function showForm(formType) {
    if (formType === 'organization') {
        document.getElementById("organizationForm").style.display = "block";
        document.getElementById("personForm").style.display = "none";
    } else if (formType === 'person') {
        document.getElementById("personForm").style.display = "block";
        document.getElementById("organizationForm").style.display = "none";
    }
}

